# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'Posts App' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Posts App
  pod 'Swinject'
  pod 'SwinjectStoryboard'
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RxSwiftExt', '~> 5'
  pod 'RxAlamofire', '~> 5'
  
  #Rx Datasources for TableViews and UICollectionViews
  pod 'RxDataSources', '~> 4.0'
  
  pod 'ProgressHUD'
  pod 'Alertift', '~> 4.1'
  
  #Image loading and caching library
  pod 'Kingfisher'

end

target 'Repository' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Repository
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RxAlamofire', '~> 5'

end

target 'RemoteApi' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for RemoteApi
  pod 'RxSwift', '~> 5'
  pod 'RxCocoa', '~> 5'
  pod 'RxAlamofire', '~> 5'

end
